.image-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%

  .image-modal-content
    position: relative
    max-width 100vw
    max-height 100vh
    width 100vw
    height 100vh
    display: flex
    align-items: center
    justify-content center

  .label
    position: absolute
    left: 0em
    top: 0em
    color: white
    display: inline-block
    background-color: rgba(255, 255, 255, 0.125)
    padding: 0.25em
    margin 0
    z-index 1

  img.main-image
    max-height: 100vh
    max-width: 100%
    margin: 0 auto
    left 0
    position relative
    z-index 0

  .image-zoom
    top: 0
    left: 0
    display none
    border-radius 15%
    position absolute
    height 140px
    width 140px
    object-fit none
    border 1px black solid
    z-index 0
    transform scale(3)

  .close-button
    position absolute
    right 0em
    top 0em


.image-modal-underlay {
  width: 100%
  height: 100%
  top: 0
  left: 0
  position: fixed
  background-color: black
  opacity: 0.85
}

.image-modal .label {

}

.instructions {
  position: absolute
  right: 0.5em
  bottom: 0.5em
  font-size: 0.9em
  color: white
  background-color: rgba(255, 255, 255, 0.125)
  padding: 0.5em

  span {
    font-family: monospace
  }
}

.image-button-wrapper {
  display: inline-flex
  flex-direction: column
}
